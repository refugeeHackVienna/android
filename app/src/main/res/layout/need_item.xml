<?xml version="1.0" encoding="utf-8"?>
<app.iamin.iamin.ui.NeedView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:foreground="?selectableItemBackground">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_medical" />

    <TextView
        android:id="@+id/item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="5"
        android:gravity="bottom"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_count"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:gravity="bottom"
        android:paddingLeft="8dp"
        android:text="Dummy Text"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_title" />

    <TextView
        android:id="@+id/item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_place"
        android:drawablePadding="12dp"
        android:paddingLeft="16dp"
        android:paddingTop="6dp"
        android:text="Dummy Text"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_subhead" />

    <TextView
        android:id="@+id/item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_action_event"
        android:drawablePadding="12dp"
        android:paddingLeft="16dp"
        android:paddingTop="4dp"
        android:text="Dummy Text"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_subhead" />

</app.iamin.iamin.ui.NeedView>